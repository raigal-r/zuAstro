    "test": "ts-mocha --config ../../.mocharc.js --exit test/**/*.spec.ts",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "chai": "^4.3.7"
  },
  "devDependencies": {
    "@pcd/eslint-config-custom": "*",
    "@pcd/tsconfig": "*",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "chai-spies": "^1.0.0",
    "eslint": "^7.32.0",
    "mocha": "^10.2.0",
    "ts-mocha": "^10.0.0",
    "tsup": "^6.7.0",
    "typescript": "^4.9.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
