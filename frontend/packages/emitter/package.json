{
  "name": "@pcd/emitter",
  "version": "0.2.0",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "files": [
    "./src/*",
    "./dist/*",
    "./README.md",
    "./LICENSE"
  ],
  "scripts": {
    "lint": "eslint \"**/*.ts{,x}\"",
    "build": "tsup src/index.ts",
    "dev": "tsup src/index.ts --watch",
    "typecheck": "yarn tsc --noEmit",
